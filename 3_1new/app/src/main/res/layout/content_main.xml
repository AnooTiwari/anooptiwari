<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/almond"
        android:id="@+id/iv"/>


    <CheckBox
        android:id="@+id/product1"
        android:layout_below="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:padding="20dp"
        android:text="@string/product1"
        android:textColor="#44f"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <CheckBox
        android:id="@+id/product2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product1"
        android:layout_marginTop="0dp"
        android:checked="false"
        android:padding="20dp"
        android:text="@string/product2"
        android:textColor="#f44"
        android:textSize="20sp"
        android:textStyle="bold|italic" />


    <CheckBox
        android:id="@+id/product3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product2"
        android:layout_marginTop="4dp"
        android:checked="false"
        android:padding="20dp"
        android:text="@string/product3"
        android:textColor="#101010"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Select product is refelect hear"
        android:layout_below="@+id/product3"
        android:layout_centerHorizontal="true"
        android:padding="40dp"
        android:textColor="#f00"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:id="@+id/finalbtn"
        android:text="action"
        android:textColor="@color/hint_color"
        android:textStyle="bold"
        android:textSize="20dp"
        />

</RelativeLayout>